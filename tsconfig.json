{
    "compilerOptions": {
		"outDir": "./dist/",
		"strictNullChecks": true,
		"moduleResolution": "node",
		"module": "commonjs",
		"jsx": "react",
		"target": "ES6",
		"allowJs": true,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"noImplicitAny": true
	},
	"include": ["next-env.d.ts", "src/**/*"],
	"exclude": ["dist", "node_modules"]
}